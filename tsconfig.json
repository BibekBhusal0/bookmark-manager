{
  "compilerOptions": {
    "target": "esnext",
    "types": ["vite/client", "node", "chrome"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@reducer/*": ["src/reducer/*"],
      "@lib/*": ["src/lib/*"],
      "@theme/*": ["src/theme/*"],
      "@components/*": ["src/components/*"],
      "@bookmarks/*": ["src/bookmarks/*"],
      "@pages/*": ["src/pages/*"],
      "@newtab/*": ["src/pages/newtab/*"],
      "@options/*": ["src/pages/options/*"],
      "@popup/*": ["src/pages/popup/*"]
    }
  },
  "include": ["src", "utils", "vite.config.ts"]
}
